# MongoDB Configuration
MONGO_ROOT_USER=feedbackadmin
MONGO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
MONGO_DATABASE=feedback_system

# JWT Configuration
JWT_SECRET=CHANGE_ME_RANDOM_STRING_MIN_32_CHARACTERS_LONG
JWT_EXPIRY=7d

# Gmail OAuth 2.0 Configuration
# Get these from: https://console.cloud.google.com/
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-client-secret
GMAIL_REDIRECT_URI=https://developers.google.com/oauthplayground
GMAIL_REFRESH_TOKEN=your-refresh-token
GMAIL_FROM_EMAIL=noreply@yourdomain.org

# API Configuration
API_BASE_URL=http://localhost:3000/api

# Application Settings
NODE_ENV=development
PORT=3000
TIMEZONE=Asia/Kolkata

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 3 * * *

# Optional: Domain & SSL (for production)
DOMAIN=feedback.yourdomain.org
SSL_EMAIL=admin@yourdomain.org
