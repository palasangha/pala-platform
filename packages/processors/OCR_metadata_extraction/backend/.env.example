# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
PORT=5000

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/gvpocr

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Google Cloud Vision API
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-credentials.json

# OCR Provider Configuration
# Options: google_vision, azure, ollama, vllm, tesseract, easyocr, claude
DEFAULT_OCR_PROVIDER=google_vision

# Enable/Disable OCR Providers (set to false to disable)
GOOGLE_VISION_ENABLED=true
AZURE_ENABLED=true
OLLAMA_ENABLED=true
VLLM_ENABLED=false
TESSERACT_ENABLED=true
EASYOCR_ENABLED=true
CLAUDE_ENABLED=true

# Azure Computer Vision Configuration
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_VISION_KEY=your-azure-vision-key-here

# Claude AI Configuration (Anthropic)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Ollama Configuration (for Gemma3)
OLLAMA_HOST=http://172.12.0.83:11434
OLLAMA_MODEL=llama3.2-vision

# VLLM Configuration
VLLM_HOST=http://172.12.0.132:8000
VLLM_MODEL=llama-3.2-11b-vision-instruct

# Tesseract Configuration
# Path to tesseract executable (optional, leave blank to use system default)
TESSERACT_CMD=/usr/bin/tesseract

# EasyOCR Configuration
# Set to False if you don't have GPU support
EASYOCR_GPU=True

# CORS Configuration
CORS_ORIGINS=http://localhost:5173

# Bulk Processing Configuration
# Number of files to process in parallel (leave blank to disable parallel processing)
# Recommended: 5-10 for optimal performance
BULK_PARALLEL_WORKERS=

# Enrichment Configuration
# Enable enrichment for bulk OCR jobs (uses inline MCP server, not async)
ENRICHMENT_ENABLED=true
