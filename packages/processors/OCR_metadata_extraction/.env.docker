# Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGO_ROOT_USERNAME=gvpocr_admin
MONGO_ROOT_PASSWORD=your-strong-password-here-change-in-production

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Google Cloud Vision API
# Place your credentials file as google-credentials.json in the backend directory
GOOGLE_APPLICATION_CREDENTIALS=/app/google-credentials.json

# OCR Provider Configuration
# Options: google_vision, azure, ollama, vllm, tesseract, easyocr
DEFAULT_OCR_PROVIDER=google_vision

# Enable/Disable OCR Providers (set to false to disable)
GOOGLE_VISION_ENABLED=true
AZURE_ENABLED=true
OLLAMA_ENABLED=true
VLLM_ENABLED=false
TESSERACT_ENABLED=true
EASYOCR_ENABLED=true

# Azure Computer Vision Configuration
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_VISION_KEY=your-azure-vision-key-here

# Ollama Configuration (for Gemma3)
# Update the host to your Ollama server IP
OLLAMA_HOST=http://172.12.0.83:11434
OLLAMA_MODEL=llama3.2-vision

# VLLM Configuration
# Update the host to your VLLM server IP
VLLM_HOST=http://172.12.0.132:8000
VLLM_MODEL=llama-3.2-11b-vision-instruct

# Tesseract Configuration
TESSERACT_CMD=/usr/bin/tesseract

# EasyOCR Configuration
EASYOCR_GPU=False
