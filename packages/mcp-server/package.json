    "lint": "eslint src/ test/",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ws": "^8.16.0",
    "pino": "^8.17.2",
